@model FoodDelivery.Domain.DTO.OrderDetailsDTO

<h1>Order Details</h1>

<form asp-action="OrderDetails" id="order-form" method="post">
    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" class="form-control" id="Address" name="Address" required />
    </div>
    <div class="form-group">
        <label for="Phone">Phone</label>
        <input type="text" class="form-control" id="Phone" name="Phone" required />
    </div>
    <div class="form-group">
        <label>Total Price</label>
        <p> @Model.TotalPrice MKD</p>
    </div>
    <input type="hidden" name="TotalPrice" value="@Model.TotalPrice" />

    <div class="form-group">
        <label>Payment Method</label>
        @if (Model.onlinePayment ?? false) 
        {
            <div>
                <label>
                    <input type="radio" name="PaymentMethod" value="Online" checked /> Online Payment
                </label>
            </div>
        }
      
            <div>
                <label>
                    <input type="radio" name="PaymentMethod" value="Cash" /> Cash on Delivery
                </label>
            </div>
        
    </div>

    <div id="card-element" style="display: none;"></div>
    <button type="submit" id="order-button" class="btn btn-primary">Next</button>
</form>
<a asp-controller="ShoppingCarts" asp-action="Index">Back to cart</a>
