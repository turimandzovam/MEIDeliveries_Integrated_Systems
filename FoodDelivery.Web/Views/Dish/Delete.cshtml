@model FoodDelivery.Domain.Domain.Dish

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Dish</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
             Meal Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DishName)
        </dd>
        <dt class="col-sm-2">
            Meal ingredients
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DishIngredients)
        </dd>
        <dt class="col-sm-2">
            Meal image url
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.DishImage" alt="Dish Image" style="max-width: 200px;" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price) den
        </dd>
        <dt class="col-sm-2">
            Meal category
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DishCategory)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant)
        </dt>
        <dd class="col-sm-10">
            @Model.Restaurant?.RestaurantName
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>