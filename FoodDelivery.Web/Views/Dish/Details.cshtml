@model FoodDelivery.Domain.Domain.Dish

@{
    ViewData["Title"] = "Dish Details";
}

<h1 class="text-center mb-4">@Model.DishName</h1>

<div class="container">
    <div class="row">
        <div class="col-md-5">
            <img src="@Model.DishImage" class="img-fluid rounded shadow" alt="@Model.DishName" style="object-fit: cover; height: 100%; width: 100%; max-height: 400px;">
        </div>
        <div class="col-md-7">
            <dl class="row">
                <dt class="col-sm-4 font-weight-bold">Category</dt>
                <dd class="col-sm-8">@Model.DishCategory</dd>

                <dt class="col-sm-4 font-weight-bold">Name</dt>
                <dd class="col-sm-8">@Model.DishName</dd>

                <dt class="col-sm-4 font-weight-bold">Ingredients</dt>
                <dd class="col-sm-8">@Model.DishIngredients</dd>

                <dt class="col-sm-4 font-weight-bold">Price</dt>
                <dd class="col-sm-8">@Model.Price ден.</dd>

                <dt class="col-sm-4 font-weight-bold">Restaurant</dt>
                <dd class="col-sm-8">@Model.Restaurant?.RestaurantName</dd>
            </dl>
        </div>
    </div>

    <div class="text-center mt-4">
        @if ( !User.IsInRole("Admin"))
        {
            <a asp-action="AddToCart" asp-route-id="@Model.Id" class="btn btn-success mx-2">Add to Cart</a>

        }
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger mx-2">Delete Dish</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mx-2">Edit Dish</a>
        }
       
        <a asp-controller="Restaurants" asp-action="Index" class="btn btn-secondary mx-2">Back to List</a>
    </div>
</div>

<style>
    h1 {
        font-size: 2.5rem;
        font-weight: 700;
    }

    .container {
        margin-top: 20px;
    }

    .row {
        margin-bottom: 20px;
    }

    .card {
        border-radius: 0.5rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-img-top {
        height: 100%;
        width: 100%;
        object-fit: cover;
    }

    .btn {
        font-size: 1rem;
        padding: 10px 20px;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>
