@model FoodDelivery.Domain.View.DishViewModel

@{
    ViewData["Title"] = "Create Dish";
}

<h1>Add new meal</h1>

<form asp-action="Create" method="post">
    <div class="form-group mb-4">
        <label asp-for="DishCategory" class="control-label">Meal Category</label>
        <select asp-for="DishCategory" class="form-control" asp-items="ViewBag.Categories">
            <option value="">Select Category</option>
        </select>
        <span asp-validation-for="DishCategory" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <label asp-for="DishName" class="control-label">Meal name</label>
        <input asp-for="DishName" class="form-control" />
        <span asp-validation-for="DishName" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <label asp-for="DishImage" class="control-label">Image url</label>
        <input asp-for="DishImage" class="form-control" />
        <span asp-validation-for="DishImage" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <label asp-for="DishIngredients" class="control-label">Ingredients</label>
        <input asp-for="DishIngredients" class="form-control" />
        <span asp-validation-for="DishIngredients" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <label asp-for="Price" class="control-label">Price</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <label asp-for="RestaurantId" class="control-label">Restaurant</label>
        <select asp-for="RestaurantId" class="form-control" asp-items="ViewBag.Restaurants">
            <option value="">Select Restaurant</option>
        </select>
        <span asp-validation-for="RestaurantId" class="text-danger"></span>
    </div>
    <div class="form-group mt-4">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-outline-dark ms-2">Back to List</a>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
